
<div class="row">
  <div class="col-lg-10">
    <h1 class="page-header"><%= translate_attribute(@jobs, :job_opportunities) %></h1>
  </div>
  <div class="col-lg-2">
   <%= link_to new_admins_backoffice_job_path, class:"btn btn-success" do %> 
      <i class="fa fa-plus"></i> <%= translate_attribute(@jobs, :add_job_opportunities) %>
    <% end %>
  </div>
</div>
<div class="table-responsive"> 
  
  <table class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
              <th><%= translate_attribute(@jobs, :title) %></th>
              <th><%= translate_attribute(@jobs, :description) %></th>
              <th><%= translate_attribute(@jobs, :local) %></th>
              <th><%= translate_attribute(@jobs, :salary) %></th>
              <th><%= translate_attribute(@jobs, :type) %></th>
              <th><%= translate_attribute(@jobs, :actions) %></th>
          </tr>
      </thead>
      <tbody>
          <% @jobs.each do |job| %>
            <tr>
                <td><%= job.title %></td>
                <td><%= job.description %></td>
                <td><%= job.local %></td>
                <td><%= job.salary %></td>
                <td><%= job.employment_type %></td>
                <td >
              
                 <%= link_to edit_admins_backoffice_job_path(job), class:"btn btn-primary btn-circle" do %> 
                  <i class="fa fa-edit"></i>
                 <% end %>

                 <%= link_to admins_backoffice_job_path(job), method: :delete, class: "btn btn-danger btn-circle", data: { confirm:  t('messages.confirm_with', item: job.title ) } do %>
                  <i class="fa fa-minus"></i>
                <% end %>
              
                </td>
            </tr>
          <% end %>
      </tbody>
  </table>
  <div class="text-center">
     <%= paginate @jobs %>
  </div>
</div>

