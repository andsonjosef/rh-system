
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Vagas de emprego</h1>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
              <th>Titulo</th>
              <th>Descrição</th>
              <th>Local</th>
              <th>Salário</th>
              <th>Tipo</th>
               <th>Ações</th>
          </tr>
      </thead>
      <tbody>
          <% @jobs.each do |job| %>
            <tr>
                <td><%= job.title %></td>
                <td><%= job.description %></td>
                <td><%= job.local %></td>
                <td><%= job.salary %></td>
                <td><%= job.employment_type %></td>
                <td >
              
                 <%= link_to edit_admins_backoffice_job_path(job), class:"btn btn-primary btn-circle" do %> 
                  <i class="fa fa-edit"></i>
                 <% end %>
                  <button type="button" class="btn btn-danger btn-circle">
                    <i class="fa fa-minus"></i>
                  </button>
                </td>
            </tr>
          <% end %>
      </tbody>
  </table>
</div>

