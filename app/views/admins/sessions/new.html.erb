
<body class="bg-gradient-primary">

  <div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
      <div class="col-xl-5 col-lg-6 col-md-6">
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <div class="row">
              <div class="col-lg-12">
                <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                </div>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "user", role: "form") do |f| %>
                  <fieldset>
                      <div class="form-group">
                        <%= f.email_field :email, autofocus: true, placeholder: "E-mail", class:"form-control form-control-user" %>
                      </div>

                      <div class="form-group">
                        <%= f.password_field :password, placeholder: "Password", class:"form-control form-control-user" %>
                      </div>

                      <% if devise_mapping.rememberable? -%>
                        <div class="form-group">
                          <div class="custom-control custom-checkbox small">
                            <%= f.check_box :remember_me , class: "custom-control-input"%>
                            <label class="custom-control-label" for="customCheck">Lembrar-me</label>
                          </div>
                        </div>
                      <% end -%>

                      <%= f.submit "Entrar", class:"btn btn-primary btn-user btn-block" %>
                      <hr>
                      <div class="text-center">
                        <a class="small" href="forgot-password.html">Forgot Password?</a>
                      </div>
                      <div class="text-center">
                        <a class="small" href="register.html">Create an Account!</a>
                      </div>
                  </fieldset>
                <% end %>          
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</body>